{
  "name": "chatgpt-telegram-workers",
  "version": "1.3.0",
  "description": "Telegram bot with ChatGPT",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "lint": "make lint",
    "build": "make build",
    "debug": "wrangler dev --local",
    "wrangler": "wrangler2",
    "wrangler:config": "wrangler2 whoami",
    "deploy:dist": "wrangler2 publish",
    "deploy:build": "npm run build && wrangler2 publish",
    "format": "prettier -w ./src ./test ./server",
    "server-prod": "node ./server/index.js",
    "server": "nodemon --ignore 'dist/' ./server/index.js"
  },
  "devDependencies": {
    "esbuild": "^0.17.11",
    "eslint": ">=5.16.0",
    "eslint-config-google": "^0.14.0",
    "express-validator": "^7.0.1",
    "js-htmlencode": "^0.3.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "request": "^2.88.2",
    "wrangler": "^2.12.0"
  },
  "exports": {
    "import": "./main.js"
  },
  "files": [
    "main.js",
    "src/**/*",
    "package.json",
    "package-lock.json"
  ],
  "author": "TBXark",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "fs": "^0.0.1-security",
    "js-htmlencode": "^0.3.0",
    "pm2": "^5.3.0",
    "request": "^2.88.2",
    "require": "^2.4.20"
  }
}
